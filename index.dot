strict digraph G {
	splines="line";
	rankdir="LR";
	newrank=true;
	edge[arrowsize=0.75];

	subgraph cluster_1 {
	  style=invis;
	  a0[label="sqlbox_alloc"];
	  a1[label="pledge", color=red];
	  a2[label="sqlbox_open", color=red];
	  a3[label="sqlite3_open", color=red]; }

	subgraph cluster_0 {
